{
  "compilerOptions": {
      "rootDir": "src",
      "outDir": "./dist",
      "downlevelIteration": true,
      "target": "ESNext",
      "module": "node16",
      "moduleResolution": "node16",
      "declaration": true,
      "declarationMap": true,
      "emitDeclarationOnly": true,
      "sourceMap": false,
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"]
}